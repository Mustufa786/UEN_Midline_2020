<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.sections.SectionE3Activity">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_midline.ui.sections.SectionE3Activity" />
    </data>


    <ScrollView
        style="@style/i_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layoutDirection="ltr"
            android:id="@+id/fldGrpSectionE3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- e116  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVe116"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/e116" />

                    <RadioGroup
                        android:id="@+id/e116"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/e116a"
                            style="@style/radiobutton"
                            android:text="@string/e116a" />

                        <RadioButton
                            android:id="@+id/e116b"
                            style="@style/radiobutton"
                            android:text="@string/e116b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- e116_title  Title   -->
            <LinearLayout
                android:id="@+id/fldGrpSectionE301"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{e116a.checked ? View.VISIBLE : View.GONE}">

                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVe116_title"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/e116_title" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- e117  Input   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVe117"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/e117" />

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/e117"
                            style="@style/textInput"
                            android:hint="@string/e117"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textColor="@android:color/black"
                            app:maxValue="20"
                            app:minValue="1"
                            app:type="range" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNext"
                    style="@style/buttons_bottom"
                    android:background="@android:color/holo_green_light"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection" />

                <Button
                    android:id="@+id/btnEnd"
                    style="@style/buttons_bottom"
                    android:background="@android:color/holo_red_light"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/end_interview" />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</layout>